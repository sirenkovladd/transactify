{
  "manifest_version": 3,
  "name": "Transaction Fetcher",
  "version": "1.0",
  "description": "Fetches transactions and sends them to an external server.",
  "permissions": [
    "activeTab",
    "scripting",
    "tabs",
    "storage"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "host_permissions": [
    "https://transaction.sirenko.ca/*",
    "https://www.cibconline.cibc.com/*",
    "https://*.wealthsimple.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://www.cibconline.cibc.com/*",
        "https://*.wealthsimple.com/*"
      ],
      "js": [
        "content.js"
      ]
    }
  ]
}